@model IEnumerable<HungManhProject.Models.Product>

@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout-admin.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.chatlieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.unit_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.img2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.img_loop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngaycapnhat)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.chatlieu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.unit_price)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.img)" alt="product image" width="370" height="370"/>
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.img2)" alt="product image" width="370" height="370" />
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.img_loop)" alt="product image" width="370" height="370"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ngaycapnhat)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.product_id }) |
            @*@Html.ActionLink("Delete", "Delete", "Product", new { id = item.product_id }, null) |*@
            @using (Html.BeginForm("Delete", "Product", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" id="id" value="@item.product_id" />
                <input onclick="return confirm('Bạn có muốn xóa sản phẩm này không?');" type="submit" value="Delete" class="btn btn-primary " />
            }
        </td>
    </tr>
}

</table>
